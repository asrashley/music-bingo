{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "array",
    "title": "Version 1 and 2 of the gameTracks Schema",
    "description": "This file format allows the tracks from a Bingo game to be imported.",
    "additionalProperties": false,
    "items": {
        "type": "object",
        "properties": {
            "album": {
                "oneOf": [
                    {
                        "type": "string",
                        "title": "Album name",
                        "description": "Name of album from which track was sampled.",
                        "default": "",
                        "examples": [
                            "The Rock Album [Explicit]"
                        ]
                    },
                    {
                        "type": "array",
                        "title": "Album name (bug)",
                        "description": "Name of album from which track was sampled.",
                        "items": {
                            "type": "string"
                        },
                        "maxItems": 1,
                        "minItems": 1
                    }
                ]
            },
            "artist": {
                "type": "string",
                "title": "Artist name",
                "description": "Name of artist(s) or band credited with this track.",
                "default": "",
                "examples": [
                    "The Darkness"
                ]
            },
            "duration": {
                "type": "integer",
                "title": "Track duration",
                "description": "Duration of track, in milliseconds.",
                "examples": [
                    25013
                ]
            },
            "filename": {
                "type": "string",
                "title": "Filename of song",
                "description": "Filename of source song.",
                "examples": [
                    "03-04- I Believe In A Thing Called Love.mp3"
                ]
            },
            "filepath": {
                "type": "string",
                "title": "Absolute filename of song",
                "description": "Absolute filename of source song.",
                "examples": [
                    "./Clips/Rock/03-04- I Believe In A Thing Called Love.mp3"
                ]
            },
            "count": {
                "type": "integer",
                "title": "Track number",
                "description": "Index of track in a game (1=first track in a game).",
                "examples": [
                    0
                ]
            },
            "refId": {
                "type": "integer",
                "title": "Reference ID",
                "description": "A unique number (across one UI session) for the source song.",
                "examples": [
                    3854
                ]
            },
            "songId": {
                "type": "integer",
                "title": "Song primary key",
                "description": "A unique number (across whole database) for this track.",
                "examples": [
                    3854
                ]
            },
            "song_id": {
                "type": "integer",
                "title": "Song primary key",
                "description": "A unique number (across whole database) for this track.",
                "examples": [
                    3854
                ]
            },
            "start_time": {
                "type": "string",
                "title": "Start time",
                "description": "Time when track starts (mm:ss).",
                "examples": [
                    "0:40",
                    "15:49"
                ]
            },
            "title": {
                "type": "string",
                "title": "Title",
                "description": "Title of this track.",
                "default": "",
                "examples": [
                    "I Believe In A Thing Called Love"
                ]
            }
        },
        "required": [
            "album",
            "artist",
            "duration",
            "title"
        ],
        "dependencies": {
            "songId": ["filename", "count"],
            "song_id": ["filepath", "start_time"]
        },
        "additionalProperties": false
    }

}
